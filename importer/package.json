{
  "name": "patoogle-importer",
  "version": "1.0.0",
  "description": "The patents importer for Patoogle",
  "main": "build/index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "build": "babel src --out-dir build",
    "start": "node build/index",
    "test": "cross-env NODE_ENV=test nyc ava",
    "coverage": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasschejtman/patoogle.git"
  },
  "author": [
    "Lucas Schejtman"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucasschejtman/patoogle/issues"
  },
  "homepage": "https://github.com/lucasschejtman/patoogle#readme",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-async-functions"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": "5",
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "lines": 10,
    "statements": 10,
    "functions": 10,
    "branches": 10,
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "reporter": [
      "html"
    ],
    "check-coverage": true,
    "all": true,
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "bookshelf": "^0.10.2",
    "commander": "^2.9.0",
    "convict": "^1.5.0",
    "elasticsearch": "^12.0.1",
    "knex": "^0.12.6",
    "pg": "^6.1.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel": "^6.5.2",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-async-functions": "^6.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "cross-env": "^3.1.3",
    "nodemon": "^1.11.0",
    "nyc": "^8.4.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6"
  }
}
