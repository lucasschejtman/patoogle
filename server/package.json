{
  "name": "patoogle",
  "version": "1.0.0",
  "description": "A better patent search experience",
  "main": "build/index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "build": "babel src --out-dir build",
    "start": "npm run db:migrate:latest && node build/index",
    "test": "ava",
    "db:init": "knex init",
    "db:seed:make": "knex seed:make",
    "db:seed:run": "knex seed:run",
    "db:migrate:make": "knex migrate:make",
    "db:migrate:latest": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasschejtman/patoogle.git"
  },
  "author": [
    "Lucas Schejtman",
    "Oliver Hyde"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucasschejtman/patoogle/issues"
  },
  "homepage": "https://github.com/lucasschejtman/patoogle#readme",
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": "5",
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "dependencies": {
    "aguid": "^1.0.4",
    "bcrypt": "^0.8.7",
    "bookshelf": "^0.10.2",
    "boom": "^4.2.0",
    "convict": "^1.5.0",
    "elasticsearch": "^12.0.1",
    "hapi": "^15.2.0",
    "hapi-auth-jwt2": "^7.1.3",
    "hapi-authorization": "^3.0.2",
    "hapi-router": "^3.5.0",
    "hapi-swagger": "^7.4.0",
    "inert": "^4.0.2",
    "joi": "^9.2.0",
    "jsonwebtoken": "^7.1.9",
    "knex": "^0.12.6",
    "knex-csv-seeder": "^0.4.1",
    "pg": "^6.1.0",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel": "^6.5.2",
    "babel-plugin-transform-async-functions": "^6.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "nodemon": "^1.11.0"
  }
}
